<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@android:color/car_card_dark" android:shape="rectangle">
            <size android:height="3.0dip" />
            <solid android:color="#79000000" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:shape="rectangle">
                        <size android:height="3.0dip" />
                        <solid android:color="#00000000" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
    <item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent" />
                <item>
                    <shape android:shape="rectangle">
                        <size android:height="3.0dip" />
                        <gradient android:startColor="@android:color/accessibility_focus_highlight" android:endColor="@android:color/accent_material_light" android:angle="135.0" android:type="linear" />
                        <corners android:radius="1000.0dip" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>